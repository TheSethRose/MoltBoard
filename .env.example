# MoltBoard environment configuration
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# GitHub integration
# Create a Personal Access Token at https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_org
GITHUB_ISSUE_SYNC_ENABLED=false

# Database
# SQLite database path
# Recommended to keep DB outside the workspace for sandbox isolation
DATABASE_URL=/Users/clawdbot/clawdbot/data/tasks.db

# Application
# Local development URL
NEXT_PUBLIC_APP_URL=http://localhost:5000

# MoltBot workspace integration (optional)
# If not set, MoltBoard will read from ~/.moltbot/moltbot.json
# MOLTBOT_WORKSPACE=/path/to/your/workspace

# Project defaults (optional)
# DEFAULT_PROJECT_COLOR=#3B82F6
# DEFAULT_PROJECT_TEMPLATE=basic

# Task status configuration
# Comma-separated list of task statuses (order matters for UI/automation)
# Server-side usage:
TASK_STATUSES=backlog,ready,in-progress,pending,review,blocked,completed
# Client-side usage (exposed to browser):
NEXT_PUBLIC_TASK_STATUSES=backlog,ready,in-progress,pending,review,blocked,completed
# Default status for new tasks
TASK_STATUS_DEFAULT=backlog
NEXT_PUBLIC_TASK_STATUS_DEFAULT=backlog
# Review status (for multi-worker flows)
TASK_STATUS_REVIEW=review
NEXT_PUBLIC_TASK_STATUS_REVIEW=review

# Review worker cooldown (minutes) to avoid repeat processing
REVIEW_COOLDOWN_MINUTES=60

## Worker model configuration
# Defaults can all be the same model or overridden per worker
# ENSURE WORKSPACE/clawdbot.json ALLOWS THESE MODELS
# WORKER_GROOM_MODEL=github-copilot/gpt-5.2-codex
# WORKER_CODE_MODEL=github-copilot/gpt-5.2-codex
# WORKER_REVIEW_MODEL=github-copilot/gpt-5.2-codex

## Clawdbot configuration
CLAWDBOT_THINKING=high
CLAWDBOT_TIMEOUT=120000
# Optional: CLAWDBOT_AGENT=main
# Optional: CLAWDBOT_SESSION_ID=research
# Optional: CLAWDBOT_PATH=/opt/homebrew/bin/clawdbot
# Optional: CLAWDBOT_USE_LOCAL=true (force embedded local CLI mode)

## Clawdbot gateway HTTP API (preferred when available)
# CLAWDBOT_GATEWAY_URL=http://127.0.0.1:18789
# CLAWDBOT_GATEWAY_TOKEN=your_gateway_bearer_token
# CLAWDBOT_GATEWAY_TOOL=message
# CLAWDBOT_GATEWAY_CHANNEL=webchat
# CLAWDBOT_GATEWAY_TARGET=main

## Worker scheduling and review settings
# Keep at 3m for max responsiveness, or increase to reduce load
REVIEW_COOLDOWN_MINUTES=60
WORKER_GROOM_INTERVAL=3m
WORKER_CODE_INTERVAL=3m
WORKER_REVIEW_INTERVAL=3m
